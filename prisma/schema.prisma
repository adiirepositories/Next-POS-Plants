datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Products {
  id                 String @id @default(auto()) @map("_id") @db.ObjectId
  slug               String?
  productName              String?
  description        String
  price              Int
  discountPercentage Int?
  rating             Int?
  stock              Int?
  brand              String?
  category           String?
  thumbnail          String?
  images             String?
  quantity           Int?
}

